<html lang='id'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Permintaan Atur Ulang Kata Sandi</title>
    <style type='text/css'>
      /* Reset styles */
      body {
        margin: 0;
        padding: 0;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
      }
      table {
        border-collapse: collapse;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
      }
      img {
        border: 0;
        height: auto;
        line-height: 100%;
        outline: none;
        text-decoration: none;
        -ms-interpolation-mode: bicubic;
      }
      .outer-table-column {
        padding-top: 20px;
        padding-bottom: 20px;
      }
      .heading-text {
        font-size: 16px;
      }
      .content-text {
        font-size: 16px;
      }
      .content-padding {
        padding: 32px !important;
      }
      .logo-size {
        height: 32px;
      }

      /* Mobile styles */
      @media only screen and (max-width: 600px) {
        .outer-table-column {
          padding-top: 32px;
          padding-bottom: 32px;
          padding-left: 10px;
          padding-right: 10px;
        }

        .heading-text {
          font-size: 14px;
        }
        .content-text {
          font-size: 14px;
        }
        .content-padding {
          padding: 24x !important;
        }
        .logo-size {
          height: 24px;
        }

        .footer-container {
          display: block !important;
          width: 100% !important;
        }

        .app-badges-cell {
          display: block !important;
          width: 100% !important;
          padding-bottom: 20px !important;
        }

        .social-icons-cell {
          display: block !important;
          width: 100% !important;
          text-align: left !important;
        }

        .social-icons-table {
          float: none !important;
        }
      }
    </style>
  </head>
  <body
    style="
      margin: 0;
      padding: 0;
      font-family:
        -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue',
        Arial, sans-serif;
      background-color: #f0f0f0;
    "
  >
    <table
      role='presentation'
      cellpadding='0'
      cellspacing='0'
      border='0'
      width='100%'
      style='background-color: #e8e8e8'
    >
      <tr>
        <td class='outer-table-column'>
          <table
            role='presentation'
            cellpadding='0'
            cellspacing='0'
            border='0'
            width='100%'
            style='max-width: 600px; margin: 0 auto'
          >
            <!-- Logo Header -->
            <tr>
              <td style='padding: 32px 0 32px 0'>
                <img
                  src='http://localhost:8000/images/logo.png'
                  alt='Hifella'
                  style='display: block; border: 0'
                  class='logo-size'
                />
              </td>
            </tr>

            <!-- Main Content Card -->
            <tr>
              <td
                class='content-padding content-text'
                style='
                  background-color: #fdfdfd;
                  border-top-left-radius: 4px;
                  border-top-right-radius: 4px;
                '
              >
                <table
                  role='presentation'
                  cellpadding='0'
                  cellspacing='0'
                  border='0'
                  width='100%'
                >
                  {{{body}}}
                </table>
              </td>
            </tr>

            <!-- Footer -->
            <tr>
              <td
                style='
                  background-color: #f9f9f9;
                  border-bottom-left-radius: 4px;
                  border-bottom-right-radius: 4px;
                '
                class='content-padding'
              >
                <table
                  role='presentation'
                  cellpadding='0'
                  cellspacing='0'
                  border='0'
                  width='100%'
                >
                  <!-- Footer Logo -->
                  <tr>
                    <td style='padding: 0 0 40px 0'>
                      <img
                        src='http://localhost:8000/images/logo.png'
                        alt='Hifella'
                        style='display: block; border: 0; height: 20px'
                      />
                    </td>
                  </tr>

                  <!-- Company Info -->
                  <tr>
                    <td style='padding: 0 0 10px 0'>
                      <p
                        style='
                          margin: 0;
                          font-size: 16px;
                          font-weight: 600;
                          color: #1a1a1a;
                          line-height: 1.6;
                        '
                      >
                        PT Van Ver Global
                      </p>
                    </td>
                  </tr>
                  <tr>
                    <td style='padding: 0 0 30px 0'>
                      <p
                        style='
                          margin: 0;
                          font-size: 14px;
                          color: #333333;
                          line-height: 1.6;
                        '
                      >
                        Spazio Tower No. 615, Jl. Mayjend Jono Sewojo, Pradah
                        Kali Kendal, Kec. Dukuh Pakis, Kota Surabaya, Jawa
                        Timur, 60225
                      </p>
                    </td>
                  </tr>

                  <!-- App Store Badges and Social Icons -->
                  <tr>
                    <td>
                      <table
                        role='presentation'
                        cellpadding='0'
                        cellspacing='0'
                        border='0'
                        width='100%'
                        class='footer-container'
                      >
                        <tr>
                          <td
                            width='50%'
                            valign='middle'
                            class='app-badges-cell'
                          >
                            <table
                              role='presentation'
                              cellpadding='0'
                              cellspacing='0'
                              border='0'
                            >
                              <tr>
                                <td style='padding: 0 10px 0 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/playstore.png'
                                      alt='Get it on Google Play'
                                      style='
                                        display: block;
                                        border: 0;
                                        height: 24px;
                                      '
                                    />
                                  </a>
                                </td>
                                <td style='padding: 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/appstore.png'
                                      alt='Download on the App Store'
                                      style='
                                        display: block;
                                        border: 0;
                                        height: 24px;
                                      '
                                    />
                                  </a>
                                </td>
                              </tr>
                            </table>
                          </td>
                          <td
                            width='50%'
                            align='right'
                            valign='middle'
                            class='social-icons-cell'
                          >
                            <table
                              role='presentation'
                              cellpadding='0'
                              cellspacing='0'
                              border='0'
                              align='right'
                              class='social-icons-table'
                            >
                              <tr>
                                <td style='padding: 0 15px 0 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/x.png'
                                      alt='X'
                                      width='24'
                                      height='24'
                                      style='display: block; border: 0'
                                    />
                                  </a>
                                </td>
                                <td style='padding: 0 15px 0 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/facebook.png'
                                      alt='Facebook'
                                      width='24'
                                      height='24'
                                      style='display: block; border: 0'
                                    />
                                  </a>
                                </td>
                                <td style='padding: 0 15px 0 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/linkedin.png'
                                      alt='LinkedIn'
                                      width='24'
                                      height='24'
                                      style='display: block; border: 0'
                                    />
                                  </a>
                                </td>
                                <td style='padding: 0'>
                                  <a href='#' style='display: block'>
                                    <img
                                      src='http://localhost:8000/images/instagram.png'
                                      alt='Instagram'
                                      width='24'
                                      height='24'
                                      style='display: block; border: 0'
                                    />
                                  </a>
                                </td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                      </table>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>